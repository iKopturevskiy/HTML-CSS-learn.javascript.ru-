{
  "name": "tasks-htmlcss",
  "version": "1.0.0",
  "description": "Course Materials",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --no-warnings --ignore=node_modules/** **/*.test.js",
    "sass": "sass assets/css/main.scss dist/styles.css",
    "build": "postcss assets/css/main.scss -o build/index.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Sergey Zelenov",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "cssnano": "^6.0.2",
    "mocha": "^10.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^15.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-scss": "^4.0.9",
    "postcss-variables": "^1.1.1",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  }
}
